@model WebAppValidaNombres.Models.FullName
@{
    ViewBag.Title = "Home Page";
}


    @*<div class="jumbotron">*@
    <div class="form-group jumbotron">
        @using (Html.BeginForm())
        {
            <h2>Ingrese los siguientes datos</h2>
            
            @Html.LabelFor(m => m.priNombre, htmlAttributes: new { @class = "control-label col-md-2" });
            <div class="form-group">
                @Html.TextBoxFor(m => m.priNombre, new { @class = "form-control", placeholder = "primer nombre", required = "required" });
                @Html.ValidationMessageFor(model => model.priNombre, "", new { @class = "text-danger" })
            </div>

            
            @Html.LabelFor(m => m.segNombre, htmlAttributes: new { @class = "control-label col-md-2" });
            <div class="form-group">
                @Html.TextBoxFor(m => m.segNombre, new { @class = "form-control", placeholder = "segundo nombre" });
            </div>

            
            @Html.LabelFor(m => m.apellido, htmlAttributes: new { @class = "control-label col-md-2" });
            <div class="form-group">
                @Html.TextBoxFor(m => m.apellido, new { @class = "form-control", placeholder = "apellido", required = "required" });
                @Html.ValidationMessageFor(model => model.apellido, "", new { @class = "text-danger" })
            </div>

            <button class="btn btn-primary btn-lg" type="submit">
                Ingresar &raquo;
            </button>
        }


